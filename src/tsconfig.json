{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*-aot.ts"],
  "include": ["app/**/*.ts", "main.ts"]
}
